<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".credentialsactivity.CredentialActivity"
    android:background="@color/white">


    <ImageView
        android:layout_width="480dp"
        android:layout_height="340dp"
        android:scaleType="fitXY"
        android:src="@drawable/point_image" />

    <ImageView
        android:layout_width="480dp"
        android:layout_height="340dp"
        android:background="@drawable/pointtopimage"
        android:scaleType="fitXY" />

    <ImageView
        android:layout_width="260dp"
        android:layout_height="120dp"
        android:src="@drawable/point_tracking_sys_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="319dp"
        android:layout_height="450dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="145dp"
        app:cardCornerRadius="34dp"
        android:backgroundTint="@android:color/transparent">

        <View
            android:background="@drawable/cardview_top_blue_border"
            android:layout_centerHorizontal="true"
            android:layout_width="319dp"
            android:layout_height="450dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:padding="5dp">

            <ImageView
                android:id="@+id/point_logo_clickable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="visible"
                android:src="@drawable/point_logo_clickable" />

            <FrameLayout
                android:id="@+id/activityCredentialsContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="80dp"
                android:visibility="gone"
                android:layout_marginBottom="10dp"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:layout_marginBottom="-20dp"
        android:layout_alignParentBottom="true"
        android:src="@drawable/bottom_muet_logo"/>



</RelativeLayout>